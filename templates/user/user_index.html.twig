{% extends '@OHMediaBackend/base.html.twig' %}

{% block meta_title %}Users{% endblock %}

{% block breadcrumbs %}
{{ bootstrap_breadcrumbs(
  bootstrap_breadcrumb(bootstrap_icon('person-gear') ~ ' Users', 'user_index'),
) }}
{% endblock %}

{% block actions %}
  {% if is_granted(attributes.create, new_user) %}
    <a href="{{ path('user_create') }}" class="btn btn-primary">
      {{ bootstrap_icon('plus-lg') }}
      Add User
    </a>
  {% endif %}
{% endblock %}

{% block main %}
  <div class="card">
    <div class="card-body">
      <div class="card-title card-title-with-count">
        <h1 class="card-title-heading">Users</h1>
        <div class="card-title-count">
          {{ bootstrap_badge_primary(pagination.count) }}
        </div>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name/Email</th>
            <th>Permissions</th>
            <th>Last Updated</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {% for user in pagination.results %}
              {{ _self.table_row(user, attributes) }}
          {% else %}
            <tr><td colspan="100%" class="text-center">No users yet</td></tr>
          {% endfor %}
        </tbody>
      </table>

      {{ bootstrap_pagination(pagination) }}

      <small>{{ bootstrap_pagination_info(pagination) }}</small>
    </div>
  </div>
{% endblock %}

{% macro table_row(user, attributes) %}
  {% set row_actions = [] %}

  {% if is_granted(attributes.edit, user) %}
    {% set row_actions = row_actions|merge([{
      route: 'user_edit',
      route_params: {id: user.id},
      color: 'secondary',
      icon: 'pen',
      text: 'Edit User',
    }]) %}
  {% endif %}

  {% if is_granted(attributes.delete, user) %}
    {% set row_actions = row_actions|merge([{
      route: 'user_delete',
      route_params: {id: user.id},
      color: 'danger',
      icon: 'trash',
      text: 'Delete User',
      confirm: 'Are you sure you want to delete this user? Clicking OK will take you to a verification step to delete this entry.',
    }]) %}
  {% endif %}

  {% set full_name = user.fullName %}

  <tr>
    <td>
      {% if full_name %}
        {{ full_name }}
        <small class="text-muted d-block">{{ user.email }}</small>
      {% else %}
        {{ user.email }}
      {% endif %}

      {% if not user.enabled %}
        {{ bootstrap_badge_danger('Disabled') }}
      {% endif %}
    </td>
    <td>{{ user_permissions(user) }}</td>
    <td>{{ user.updatedAt|datetime }}</td>
    <td>
      {% include '@OHMediaBackend/widget/row_actions.html.twig' with {
        row_actions: row_actions,
      } only %}
    </td>
  </tr>
{% endmacro %}
